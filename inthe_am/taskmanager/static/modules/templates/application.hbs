        </section>
    {{else}}
        <section class="top-bar-section">
            <ul class="left">
                <li>
                    <a href="#" {{action "login"}}><i class="fa fa-sign-in">Log In with Google</i></a>
                </li>
            </ul>
        </section>
    {{/if}}
