<nav class="top-bar" data-topbar>
    <ul class="title-area">
        <li class="name">
            <h1><a href="#" {{action "home"}}><img src="/static/logo.png" />Inthe.AM</a></h1>
        </li>
    </ul>

    {{#if controller.user.name}}
        <section class="top-bar-section">
            <!-- Right Nav Section -->
            <ul class="right">
                <li class="non-essential">
                    {{#link-to "synchronization"}}<i class="fa fa-cloud-upload">Sync</i>{{/link-to}}
                </li>
                <li class="non-essential">
                    {{#link-to "sms"}}<i class="fa fa-phone">SMS</i>{{/link-to}}
                </li>
                <li class="non-essential">
                    {{#link-to "api_access"}}<i class="fa fa-gears">API</i>{{/link-to}}
                </li>
                <li class="non-essential">
                    {{#link-to "activityLog"}}<i class="fa fa-list">Log</i>{{/link-to}}
                </li>
                <li>
                    {{#link-to "configure"}}<i class="fa fa-wrench">Settings</i>{{/link-to}}
                </li>
                <li>
                    <a href="#" {{action "logout"}}><i class="fa fa-sign-out">Log Out</i></a>
                </li>
            </ul>

            <!-- Left Nav Section -->
            <ul class="left">
                <!-- Mobile-only -->
                <li class="mobile-only">
                    {{#link-to "mobileTasks"}}<i class="fa fa-list-alt">Tasks</i>{{/link-to}}
                </li>
                <li class="mobile-only">
                    {{#link-to "createTask"}}<i class="fa fa-pencil-square-o">New</i>{{/link-to}}
