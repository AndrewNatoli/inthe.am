<div class="pure-u-1" id="list">
    {{#each task in controller}}
        <div {{bind-attr class=":task :pure-g task.taskwarrior_class"}} {{action "view_task" task }}>
            <div {{bind-attr class=":pure-u task.status"}}>
                <i {{bind-attr class=":task-icon :fa task.icon"}}></i>
            </div>
            <div class="pure-u-3-4">
                <h5 class="status" {{bind-attr title="task.project"}}>{{propercase task.project}}</h5>
                <p class="description">{{task.description}}</p>
                {{#each task.tags}}
                    <i class="fa fa-tag">{{this}}</i>
                {{/each}}
            </div>
        </div>
    {{else}}
        <div class="task task-selected pure-g">
            Nothing to see here...
        </div>
    {{/each}}
</div>
<div class="pure-u-1" id="main">
    <div class="task-content">
        {{outlet}}
    </div>
</div>
