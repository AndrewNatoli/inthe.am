<div class="row standalone">
    <h2>Activity Log</h2>

    <table class="log">
        <thead>
            <tr>
                <th>Last Seen</th>
                <th>First Seen</th>
                <th>Message</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            {{#each message in controller}}
                <tr>
                    <td>{{fromnow message.last_seen}}</td>
                    <td>{{fromnow message.created}}</td>
                    <td>{{message.message}}</td>
                    <td>{{message.count}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{partial "footer"}}
</div>
