  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "meteor://ðŸ’»app/*": "${workspaceFolder}/ui/*",
        "webpack:///./~/*": "${workspaceFolder}/ui/node_modules/*",
        "webpack://?:*/*": "${workspaceFolder}/ui/*"
      }
    },
    {
      "name": "Connect to Django",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/var/www/twweb"
        }
      ],
      "port": 3000,
      "host": "localhost"
    }
  ]
}
