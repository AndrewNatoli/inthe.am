<div class="pure-u-1" id="list">
    {{#each task in controller}}
        <div class="task task-selected pure-g" {{action "view_task" task }}>
            <div class="pure-u-3-4">
                <h5 class="status">{{task.status}}</h5>
                <p class="description">{{task.description}}</p>
            </div>
        </div>
    {{else}}
        <div class="task task-selected pure-g">
            Nothing to see here...
        </div>
    {{/each}}
</div>
<div class="pure-u-1" id="main">
    <div class="task-content">
        {{outlet}}
    </div>
</div>
